<div class="page-header">
  <h1><%= @department.code %> <small>Department</small></h1>
</div>

<table class="table table-striped">
  <tbody>
    <tr>
      <th>Code:</th>
      <td id="code"><%= @department.code %></td>
    </tr>

    <tr>
      <th>Name:</th>
      <td id="name"><%= @department.name %></td>
    </tr>

    <tr>
      <th>Division:</th>
      <td id="division"><%= @department.division.code %></td>
    </tr>
  </tbody>
</table>

<%= render 'shared/show_action_buttons', object: @department %>

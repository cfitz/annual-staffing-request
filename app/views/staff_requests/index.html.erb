<div class="page-header">
  <h1>Staff Requests</h1>
</div>

<%= render 'shared/index_action_buttons', object: StaffRequest %>

<%= will_paginate %>

<table class="table table-striped">
  <thead>
    <tr>
      <th id="position_description">Position description</th>
      <th id="employee_type">Employee type</th>
      <th id="request_type">Request type</th>
      <th id="annual_base_pay">Annual base pay</th>
      <th id="nonop_funds">Nonop funds</th>
      <th id="department">Department</th>
      <th id="subdepartment">Subdepartment</th>
      <%= render 'shared/table_action_buttons_header' %>
    </tr>
  </thead>

  <tbody>
    <% @staff_requests.each do |staff_request| %>
      <tr>
        <td headers="position_description"><%= staff_request.position_description %></td>
        <td headers="employee_type"><%= staff_request.employee_type.code %></td>
        <td headers="request_type"><%= staff_request.request_type.code %></td>
        <td headers="annual_base_pay"><%= number_to_currency(staff_request.annual_base_pay) %></td>
        <td headers="nonop_funds"><%= number_to_currency(staff_request.nonop_funds) %></td>
        <td headers="department"><%= staff_request.department.code %></td>
        <td headers="subdepartment"><%= staff_request.subdepartment.code if staff_request.subdepartment %></td>
        <%= render 'shared/table_action_buttons', object: staff_request %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

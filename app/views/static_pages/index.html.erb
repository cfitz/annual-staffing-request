<div class="page-header">
  <h1>Annual Staffing Requests</h1>
</div>

<%= flash_messages %>

<div class="panel panel-default">
  <div class="panel-heading">Staffing Requests</div>
  <div class="panel-body">
    <ul class="list-group">
      <%= link_to 'Labor and Assistance Requests', labor_requests_path, class: "list-group-item" %>
      <%= link_to 'Staff Requests', staff_requests_path, class: "list-group-item" %>
      <%= link_to 'Salaried Contractor Requests', contractor_requests_path, class: "list-group-item" %>
    </ul>
  </div>
</div>

<% if current_user.admin? %>
  <div class="panel panel-danger">
    <div class="panel-heading" 
         id="admin_panel_heading"
         data-toggle="collapse"
         data-parent="#admin"
         data-target="#collapseAdmin">
          Administration
    </div>
    <div id="collapseAdmin" class="panel-collapse collapse">
      <div class="panel-body" id="admin_panel_body">
        <div class="well">
          <%= link_to 'Divisions', divisions_path, class: "btn btn-default" %>
          <%= link_to 'Departments', departments_path, class: "btn btn-default" %>
          <%= link_to 'Units', units_path, class: "btn btn-default" %>
        </div>
        <div class="well">
          <%= link_to 'Employee Categories', employee_categories_path, class: "btn btn-default" %>
          <%= link_to 'Employee Types', employee_types_path, class: "btn btn-default" %>
        </div>
        <div class="well">
          <%= link_to 'Reports', reports_path, class: "btn btn-default" %>
        </div>
        <div class="well">
          <%= link_to 'Request Types', request_types_path, class: "btn btn-default" %>
        </div>
        <div class="well">
          <%= link_to 'Review Status Types', review_statuses_path, class: "btn btn-default" %>
        </div>
        <div class="well">
          <%= link_to 'Roles', roles_path, class: "btn btn-default" %>
          <%= link_to 'Role Cutoffs', role_cutoffs_path, class: "btn btn-default" %>
          <%= link_to 'Role Types', role_types_path, class: "btn btn-default" %>
        </div>
        <div class="well">
          <%= link_to 'Users', users_path, class: "btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

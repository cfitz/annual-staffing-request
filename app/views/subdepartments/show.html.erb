<div class="page-header">
  <h1><%= @subdepartment.code %> <small>Subdepartment</small></h1>
</div>

<table class="table table-striped">
  <tbody>
    <tr>
      <th>Code:</th>
      <td id="code"><%= @subdepartment.code %></td>
    </tr>

    <tr>
      <th>Name:</th>
      <td id="name"><%= @subdepartment.name %></td>
    </tr>

    <tr>
      <th>Department:</th>
      <td id="department"><%= @subdepartment.department.code %></td>
    </tr>

    <tr>
      <th>Division:</th>
      <td id="division"><%= @subdepartment.department.division.code %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_subdepartment_path(@subdepartment) %> |
<%= link_to 'Back', subdepartments_path %>

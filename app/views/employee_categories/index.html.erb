<div class="page-header">
  <h1>Employee Categories</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @employee_categories.each do |employee_category| %>
        <tr>
          <td><%= employee_category.code %></td>
          <td><%= employee_category.name %></td>
          <td><%= link_to 'Show', employee_category %></td>
          <td><%= link_to 'Edit', edit_employee_category_path(employee_category) %></td>
          <td><%= link_to 'Destroy', employee_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Employee category', new_employee_category_path %>

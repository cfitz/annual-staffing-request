<div class="page-header">
  <h1>Labor and Assistance Requests</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th id="position_description">Position description</th>
        <th id="employee_type">Employee type</th>
        <th id="request_type">Request type</th>
        <th id="contractor_name">Contractor name</th>
        <th id="number_of_positions">Number of positions</th>
        <th id="hourly_rate">Hourly rate</th>
        <th id="hours_per_week">Hours per week</th>
        <th id="number_of_weeks">Number of weeks</th>
        <th id="nonop_funds">Nonop funds</th>
        <th id="department">Department</th>
        <th id="subdepartment">Subdepartment</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @labor_requests.each do |labor_request| %>
        <tr>
          <td headers="position_description"><%= labor_request.position_description %></td>
          <td headers="employee_type"><%= labor_request.employee_type.code %></td>
          <td headers="request_type"><%= labor_request.request_type.code %></td>
          <td headers="contractor_name"><%= labor_request.contractor_name %></td>
          <td headers="number_of_positions"><%= labor_request.number_of_positions %></td>
          <td headers="hourly_rate"><%= number_to_currency(labor_request.hourly_rate) %></td>
          <td headers="hours_per_week"><%= labor_request.hours_per_week %></td>
          <td headers="number_of_weeks"><%= labor_request.number_of_weeks %></td>
          <td headers="nonop_funds"><%= number_to_currency(labor_request.nonop_funds) %></td>
          <td headers="department"><%= labor_request.department.code %></td>
          <td headers="subdepartment"><%= labor_request.subdepartment.code if labor_request.subdepartment %></td>
          <td>
            <%= link_to labor_request, class: "btn btn-default", alt: "Details" do %>
              <i class="glyphicon glyphicon-option-horizontal"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_labor_request_path(labor_request), class: "btn btn-info", alt: "Edit" do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
          </td>
          <td>
            <%= link_to labor_request, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", alt: "Destroy" do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>


<div class="page-header">
  <h1>Labor and Assistance Request</h1>
</div>

<table class="table table-striped">
  <tbody>
    <tr>
      <th>Position description:</th>
      <td id="position_description"><%= @labor_request.position_description %></td>
    </tr>

    <tr>
      <th>Employee type:</th>
      <td id="employee_type"><%= @labor_request.employee_type.code %></td>
    </tr>

    <tr>
      <th>Request type:</th>
      <td id="request_type"><%= @labor_request.request_type.code %></td>
    </tr>

    <tr>
      <th>Contractor name:</th>
      <td id="contractor_name"><%= @labor_request.contractor_name %></td>
    </tr>

    <tr>
      <th>Number of positions:</th>
      <td id="number_of_positions"><%= @labor_request.number_of_positions %></td>
    </tr>

    <tr>
      <th>Hourly rate:</th>
      <td id="hourly_rate"><%= number_to_currency(@labor_request.hourly_rate) %></td>
    </tr>

    <tr>
      <th>Hours per week:</th>
      <td id="hours_per_week"><%= @labor_request.hours_per_week %></td>
    </tr>

    <tr>
      <th>Number of weeks:</th>
      <td id="number_of_weeks"><%= @labor_request.number_of_weeks %></td>
    </tr>
    
    <tr>
      <th>Annual cost:</th>
      <td id="annual_cost"><%= number_to_currency(@labor_request.annual_cost) %></td>
    </tr>

    <tr>
      <th>Nonop funds:</th>
      <td id="nonop_funds"><%= number_to_currency(@labor_request.nonop_funds) %></td>
    </tr>

    <tr>
      <th>Nonop source:</th>
      <td id="nonop_source"><%= @labor_request.nonop_source %></td>
    </tr>

    <tr>
      <th>Department:</th>
      <td id="department"><%= @labor_request.department.code %></td>
    </tr>

    <tr>
      <th>Unit:</th>
      <td id="unit"><%= @labor_request.unit.code if @labor_request.unit %></td>
    </tr>

    <tr>
      <th>Justification:</th>
      <td id="justification"><%= @labor_request.justification %></td>
    </tr>
    <tr>
      <th>Request Status:</th>
      <td id="request_status"><%= @labor_request.review_status.name if @labor_request.review_status %></td>
    </tr>
    <tr>
      <th>Review Comment:</th>
      <td id="review_comment"><%= @labor_request.review_comment %></td>
    </tr>
  </tbody>
</table>

<%= render 'shared/show_action_buttons', object: @labor_request %>

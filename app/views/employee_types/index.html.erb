<div class="page-header">
  <h1>Employee Types</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Employee category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @employee_types.each do |employee_type| %>
        <tr>
          <td><%= employee_type.code %></td>
          <td><%= employee_type.name %></td>
          <td><%= employee_type.employee_category.code %></td>
          <td><%= link_to 'Show', employee_type %></td>
          <td><%= link_to 'Edit', edit_employee_type_path(employee_type) %></td>
          <td><%= link_to 'Destroy', employee_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>


<p id="notice"><%= notice %></p>

<h1>Listing Contractor Requests</h1>

<table>
  <thead>
    <tr>
      <th>Employee type</th>
      <th>Position description</th>
      <th>Request type</th>
      <th>Contractor name</th>
      <th>Number of months</th>
      <th>Annual base pay</th>
      <th>Nonop funds</th>
      <th>Nonop source</th>
      <th>Department</th>
      <th>Subdepartment</th>
      <th>Justification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contractor_requests.each do |contractor_request| %>
      <tr>
        <td><%= contractor_request.employee_type %></td>
        <td><%= contractor_request.position_description %></td>
        <td><%= contractor_request.request_type %></td>
        <td><%= contractor_request.contractor_name %></td>
        <td><%= contractor_request.number_of_months %></td>
        <td><%= contractor_request.annual_base_pay %></td>
        <td><%= contractor_request.nonop_funds %></td>
        <td><%= contractor_request.nonop_source %></td>
        <td><%= contractor_request.department %></td>
        <td><%= contractor_request.subdepartment %></td>
        <td><%= contractor_request.justification %></td>
        <td><%= link_to 'Show', contractor_request %></td>
        <td><%= link_to 'Edit', edit_contractor_request_path(contractor_request) %></td>
        <td><%= link_to 'Destroy', contractor_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


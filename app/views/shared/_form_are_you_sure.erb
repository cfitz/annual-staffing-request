<%#
# Enables the Jquery AreYouSure? plugin to alert user on navigation away from a unsubmitted form.
%>

<script type="text/javascript">
  $(document).ready(function(){
    $('form').areYouSure({
      'message' : 'Are you sure you want to leave this page?\n\nData you have entered may not be saved!\n\nPress OK to continue, or Cancel to stay on the current page.',
      'softPageUnloadEvent': 'turbolinks:before-visit'
    });
  });
</script>
<div class="page-header">
  <h1>Subdepartments</h1>
</div>

<%= render 'shared/index_action_buttons', model_type: Subdepartment %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :code, 'Code') %></th>
      <th><%= sort_link(@q, :name, 'Name') %></th>
      <th><%= sort_link(@q, 'department_code', 'Department') %></th>
      <th><%= sort_link(@q, 'division_code', 'Division') %></th>
      <%= render 'shared/table_action_buttons_header' %>
    </tr>
  </thead>

  <tbody>
    <% @subdepartments.each do |subdepartment| %>
      <tr>
        <td><%= subdepartment.code %></td>
        <td><%= subdepartment.name %></td>
        <td><%= subdepartment.department.code %></td>
        <td><%= subdepartment.department.division.code %></td>
        <%= render 'shared/table_action_buttons', object: subdepartment %>
      </tr>
    <% end %>
  </tbody>
</table>

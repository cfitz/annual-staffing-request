<div class="page-header">
  <h1><%= @department.code %> <small>Department</small></h1>
</div>

<table class="table table-striped">
  <tbody>
    <tr>
      <th>Code:</th>
      <td id="code"><%= @department.code %></td>
    </tr>

    <tr>
      <th>Name:</th>
      <td id="name"><%= @department.name %></td>
    </tr>

    <tr>
      <th>Division:</th>
      <td id="division"><%= @department.division.code %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_department_path(@department) %> |
<%= link_to 'Back', departments_path %>
